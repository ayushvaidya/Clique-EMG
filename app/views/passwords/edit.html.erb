
    <div class="col-md-8 col-md-offset-2">
      <div class="row">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2>Change Your Password</h2>
          </div>
          <div class="panel-body">
			<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>


          <div class="form-group">			
				  	<%= f.hidden_field :reset_password_token %>
          </div>

          <div class="form-group">
				   <p><%= f.label :current_password %><br />
				   <%= f.password_field :current_password, class: "form-control" %></p>
          </div>

          <div class="form-group">
				  <p><%= f.label :password, "New password" %><br />
				  	<%= f.password_field :password, class: "form-control" %></p>
          </div>

          <div class="form-group">
					  <p><%= f.label :password_confirmation, "Confirm new password" %><br />
					  <%= f.password_field :password_confirmation, class: "form-control" %></p>
          </div>

          <div class="form-group">
				 	 <p><%= f.submit "Change my password", class: "btn btn-primary secondary-background" %></p>
          </div>


			<% end %>
        </div>
      </div>
    </div>

