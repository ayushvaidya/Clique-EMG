
<div class="col-md-8 col-md-offset-2">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Create your Clique</h2>
      </div>
      <div class="panel-body">
		<%= form_for @clique do |f| %>
          <div class="form-group">			
			  <%= f.label :name, "Clique Name (Optional) " %>
			  <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group">
			  <%= f.label :price, "Monthly Subscription Price ($)" %>
			  <%= f.number_field :price, :step => 1.00, class: "form-control"  %>
          </div>

          <div class="form-group">
			  <%= f.label :description %><br>
			  <%= f.text_area :description, :cols => '50', :rows => '5', class: "form-control" %>
          </div>

          <div class="form-group">
			  <%= f.label :thank_you_message, "Thank You Message (Optional)" %><br>
			  <%= f.text_area :thank_you_message, :cols => '50', :rows => '5', class: "form-control" %>
          </div>


          <div class="form-group">
			  <%= f.submit "Create Clique", class: "btn btn-primary secondary-background"  %>
          </div>				  
		<% end %>

    </div>
  </div>
</div>
    