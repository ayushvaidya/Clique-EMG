<div class="player1">
  <div class="player1-Top">
    <div class="overlay"></div>
    
    <div class="player1-background">
    	<%= image_tag track.pic.url %>
    </div>

    <div class="player1-Picture">
    	<%= image_tag track.pic.url %>
    </div>

    <div class="player1-Stats">
      <div class="player1-Stats1">
        <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span> 12K 
      </div>   
      <div class="player1-Stats1">     
        <span class="glyphicon glyphicon-heart" aria-hidden="true"></span> 52K
      </div>
      <div class="player1-Stats1">
        <span class="glyphicon glyphicon-play" aria-hidden="true"></span> 120K
      </div>
    </div>
      
    <div class="player1-Genre">
      <%= time_ago_in_words track.created_at %>
    </div>
  </div>
  
  <div class="player1-Section2">

    <div class="player1-Section2-Middle">

      <div class="player1-Name">
        <div class="player1-play">
          <%= link_to 'Play', track.song.url, class:"playa"%>
        </div>
      </div>

    <div class="player1-left-btn">

      <div class="player1-artist">
        <%= link_to track.owner.name, track.owner %>
      </div>

      <div class="player1-songName">
        <%= track.name %>
      </div>
      
    </div>

    <div class="player1-right-btn">
    	<!-- Delete Track -->
	<% if current_user && track.owner == current_user %>
         <div class="player1-btn2">		
	  <%= link_to "Delete", track, :method => :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
        </div>
	<% end %>

      <div class="player1-btn">
        <span class="glyphicon glyphicon-share" aria-hidden="true"></span>
      </div>
      <div class="player1-btn">
        <span class="glyphicon glyphicon-save" aria-hidden="true"></span>
      </div>
      <div class="player1-btn">
        <span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
      </div>
      <div class="player1-btn">
        <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
      </div>
      <div class="player1-btn">
        <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
      </div>





    </div>





