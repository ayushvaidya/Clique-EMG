<div class="sm2-bar-ui fixed full-width dark-text flat" id="yoloswa">
  <div class="bd sm2-main-controls">

    <div class="sm2-inline-element sm2-button-element">
      <div class="sm2-button-bd">
        <span class="glyphicon glyphicon-step-backward" ></span>
        <a href="#prev" title="Previous" class="sm2-inline-button previous"></a>
      </div>
    </div>

    <div class="sm2-inline-element sm2-button-element">
      <div class="sm2-button-bd" onclick="$('#playorpause').toggleClass('glyphicon-play').toggleClass('glyphicon-pause');">
        <span id="playorpause" class="glyphicon glyphicon-play" aria-hidden="true"></span>
        <a href="#play" class="sm2-inline-button play-pause">Play / pause</a>
      </div>
    </div>

    <div class="sm2-inline-element sm2-button-element">
      <div class="sm2-button-bd">
        <span class="glyphicon glyphicon-step-forward" aria-hidden="true"></span>
        <a href="#next" title="Next" class="sm2-inline-button next">&gt; next</a>
      </div>
    </div>

    <div class="sm2-inline-element sm2-inline-status">
      <div class="sm2-progress">
        <div class="sm2-row">
          <div class="sm2-inline-time">0:00</div>
          <div class="sm2-progress-bd">
            <div class="sm2-progress-track">
              <div class="sm2-progress-bar"></div>
            </div>
          </div>
          <div class="sm2-inline-duration">0:00</div>
        </div>
      </div>
    </div>

      <% @tracks = Track.all; %>

    <div class="sm2-inline-element sm2-name">
      <div class="sm2-playlist">
        <div class="audioplayer-image">
          
        </div>
        <div class="sm2-playlist-target">
          <div class="audioplayer-info">
            <h4> Anmol Mago</h4>
            <h5>
              <% if @tracks.first%>
                <%=  @tracks.first.name %>
              <% end %>
            </h5>
          </div>
        </li></div>
      </div>
    </div>

